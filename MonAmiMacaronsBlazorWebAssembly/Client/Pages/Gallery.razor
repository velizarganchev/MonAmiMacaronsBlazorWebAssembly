@page "/gallery"
<section class="section-galery">
    <div class="container center-text">
        <h1 class="heading-primary">Gallery</h1>
    </div>
    <div class="gallery-page grid grid--4--cols">
        @for (int i = 1; i <= 40; i++)
        {
            var picture = i.ToString() + ".png";
            <figure class="gallery-item">
                                <img src="/img/MonAmiFotosGallery/@picture"
                 alt="Photo of beautifully arranged foot" />
            </figure>
        }       
    </div>
</section>
